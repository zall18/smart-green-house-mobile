                    android:layout_height="wrap_content"
                    android:text="Fan"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turn On"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

